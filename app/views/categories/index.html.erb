<div class="d-flex">
  <div class="p-2 flex-grow-1">
    <h1>Categories</h2>
  </div>
  <div class="p-2">
    <%= link_to "Add new category", new_category_path, class:"btn btn-primary" %>
  </div>
</div>
<table class="table inventory-table">
  <thead>
    <tr>
      <th scope="col", class="col-1"></th>
      <th scope="col", class="col-1">Name</th>
      <th scope="col", class="col-3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td>
         <%= link_to category do %>
            <% if category.image.attached? %>
              <%= image_tag category.image, class:'rounded', width: 100, height: 100, style: "object-fit: cover" %>
            <% else %>
              <%= image_tag 'placeholder-category.png', class:'rounded', width: 100, height: 100, style: "object-fit: cover" %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to category.name, category, class:'link-dark' %></td>
        <td>
          <%= link_to edit_category_path(category), class: 'button mb-3' do %>
           <%= icon('fa-solid', 'pen') %> Edit
          <% end %>
          <br>
          <%= link_to category_path(category), class: 'button mb-3 link-danger', data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
          <%= icon('fa-solid', 'trash-can') %> Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
