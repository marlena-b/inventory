<%= form_with(model: location) do |f| %>
  <%= render 'shared/errors', object: location %>
  <div class="col-auto">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>
  <div class="col-auto">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>
  <div class="col-auto">
    <%= f.label :image %>
    <%= f.file_field :image, class: 'form-control mb-3' %>
  </div>
  <div class="col-auto">
    <%= f.submit type: 'submit', class: 'btn btn-primary' %>
  </div>
<% end %>
