<div class="d-flex">
  <div class="p-2 flex-grow-1">
    <h1>Locations</h2>
  </div>
  <div class="p-2">
    <%= link_to "Add new location", new_location_path, class:"btn btn-primary" %>
  </div>
</div>
<table class="table inventory-table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td>
          <%= link_to location do %>
            <% if location.image.attached? %>
              <%= image_tag location.image, class:'rounded', width: 100, height: 100, style: "object-fit: cover" %>
            <% else %>
              <%= image_tag 'placeholder.jpeg', class:'rounded', width: 100, height: 100, style: "object-fit: cover" %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to location.name, location %></td>
        <td><%= location.address %></td>
        <td>
          <%= link_to "Edit", edit_location_path(location), class: 'button mb-3' %>
          <%= link_to "Delete", location_path(location), class: 'button mb-3', data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
