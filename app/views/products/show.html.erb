<div class="col-md-3 mb-4 px-5 text-center">
  <%= @product.name %>
  <% if @product.image.attached? %>
    <%= image_tag @product.image, class:"img-fluid rounded mb-3" %>
  <% end %>
  <% @product.stocks.each do |stock| %>
    <%= stock.location.name %>: <%= stock.quantity %>
  <% end %>
  <%= link_to "Edit", edit_product_path(@product), class: 'button' %>
  <%= link_to "Delete", product_path(@product), class: 'button', data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }  %>
</div>
