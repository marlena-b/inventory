<div class="d-flex">
  <div class="p-2 flex-grow-1">
    <h1>Products</h2>
  </div>
  <div class="p-2">
    <%= link_to "Add new product", new_product_path, class:"btn btn-primary" %>
  </div>
</div>
<table class="table inventory-table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">SKU</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= link_to product do %>
            <% if product.image.attached? %>
              <%= image_tag product.image, class:'rounded', width: 100, height: 100, style: "object-fit: cover" %>
            <% else %>
              <%= image_tag 'placeholder.jpeg', class:'rounded', width: 100, height: 100, style: "object-fit: cover" %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to product.name, product %></td>
        <td><%= product.sku %></td>
        <td>
          <%= link_to "Edit", edit_product_path(product), class: 'button mb-3' %>
          <%= link_to "Delete", product_path(product), class: 'button mb-3', data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
